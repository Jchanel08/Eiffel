
<%= tag :img, :src => data.home.background_url, :class => "main-cover" %>
<div class="content-wrapper">
    <div class="content-area">
        <span class="lname-highlight"><%= data.home.last_name %></span>

        <div class="inner">
            <span class="position-subhead">#<%= data.home.jersey %> - <%= data.home.position %></span>
            <h1 class="player-name"><%= data.home.first_name %> <%= data.home.last_name %></h1>

            <div class="stats">
                <div class="stat-item">
                    <span class="label">Club</span> <%= data.home.club %>
                </div>
                <div class="stat-item">
                    <span class="label">Coach</span> <%= data.home.coach %>
                </div>
                <div class="stat-item">
                    <span class="label">School</span> <%= data.home.school %>
                </div>
                <div class="stat-item">
                    <span class="label">GPA</span> <%= data.home.gpa %>
                </div>
            </div>

            <div class="quote">
            <p class="quote-title">Coach's Assessment</p>
                <blockquote>
                    <div class="quote-accent">
                        <?xml version="1.0" encoding="UTF-8"?>
                        <svg width="146px" height="118px" viewBox="0 0 146 118" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
