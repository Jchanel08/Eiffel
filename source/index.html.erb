                                <g id="Template-Concept-3" CLASS="accent-fill" transform="translate(-75.000000, -517.000000)" fill-rule="nonzero" fill="<%= data.home.primary_color %>">
                                    <g id="Content-left" transform="translate(71.000000, 133.000000)">
                                        <g id="Quote" transform="translate(24.000000, 403.000000)">
                                            <path d="M61.4369449,78.3312508 L61.4369449,46.1675689 C61.4369449,21.3452659 77.5381011,4.52145387 100.203143,0 L104.497073,9.36058447 C94.0017598,13.3511265 87.2566226,25.1922006 87.2566226,34.8138893 L104.51865,34.8138893 L104.51865,78.3312508 L61.4369449,78.3312508 Z M0.770870337,78.3312508 L0.770870337,46.1675689 C0.770870337,21.3452659 16.9243548,4.52145387 39.5599206,0 L43.8525755,9.36058447 C33.3666022,13.3511265 26.6302372,25.1922006 26.6302372,34.8138893 L43.7965469,34.8138893 L43.7965469,78.3312508 L0.770870337,78.3312508 Z" id="icon-quote"></path>
